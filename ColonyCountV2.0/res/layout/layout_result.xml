<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_root2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout_top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/btn_background" >

        <LinearLayout
            android:id="@+id/btn_result_cancel_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/btn_result_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/selector_btn_clicked"
                android:padding="10dp"
                android:src="@drawable/btn_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_save_or_ok_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/btn_save_or_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_clicked"
                android:padding="10dp"
                android:src="@drawable/btn_save2" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_result_cancel_container"
            android:layout_toRightOf="@+id/btn_result_cancel_container"
            android:background="@color/white" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_save_or_ok_container"
            android:layout_toLeftOf="@+id/btn_save_or_ok_container"
            android:background="@color/white" />
    </RelativeLayout>

    <!-- workaround margin -->
    <View
        android:id="@+id/margin_view_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/relativeLayout_top2"
        android:background="@color/black" />

    <com.colonycount.cklab.view.SquareImageView
        android:id="@+id/squareImageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/margin_view_top"
        android:background="@color/black" />

    <!-- workaround margin -->
    <View
        android:id="@+id/margin_view_bot"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/squareImageView1"
        android:background="@color/black" />
    
    <RelativeLayout
        android:id="@+id/text_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/margin_view_bot"
        android:background="@color/btn_background"
        android:padding="5dp" >
        
        <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" 
            android:text="你可以進一步編輯計算結果:"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>
    
    
    <com.colonycount.cklab.crop.CropImageView2
        android:id="@+id/cropimageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_top2"
        android:layout_marginTop="30dp"
        android:background="#55000000" />

    <!--
         <ZoomControls
        android:id="@+id/zoomControls1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image2" />
    -->

    <LinearLayout
        android:id="@+id/container_show_colony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/image2"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/show_red_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/show_green_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/show_purple_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/purple" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_bot_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_msg"
        android:background="@color/btn_background"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_clicked"
                android:src="@drawable/btn_add_v2" />
        </LinearLayout>

        <!-- <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_clicked"
                android:src="@drawable/btn_sub_v2" />
        </LinearLayout>

        <!-- <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_btn_clicked"
                android:src="@drawable/btn_edit_v2" />
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/msg_bot_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/margin_view_bot"
        android:background="@color/btn_background"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_action_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Medium Text"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </RelativeLayout>
    
    
