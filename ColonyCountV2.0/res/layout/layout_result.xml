    </RelativeLayout>-->
    

    
    <RelativeLayout 
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_top2">
        
        <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="實驗日期:"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/textView3"
	        android:text="2014/12/4"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView3"
	        android:text="實驗對照參數:"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView4"
	        android:layout_toRightOf="@+id/textView5"
	        android:text="未設定"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView5"
	        android:text="稀釋倍數:"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView6"
	        android:layout_toRightOf="@+id/textView7"
	        android:text="未設定"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView7"
	        android:text="菌種:"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
	
	    <TextView
	        android:id="@+id/textView10"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView8"
	        android:layout_toRightOf="@+id/textView9"
	        android:text="未設定"
	        android:textColor="@color/red"
	        android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout_top2" >
	    
        <TextView
            android:id="@+id/align_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120個  "
            android:textColor="@color/red"
            android:drawableLeft="@drawable/btn_eye01"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible" />
        
        <TextView
            android:id="@+id/show_red_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50個"
            android:textColor="@color/eye_red"
            android:drawableLeft="@drawable/selector_eye01_click"
            android:layout_alignLeft="@+id/align_left_text"
            android:layout_alignParentTop="true"
            android:padding="1dp" />
        <!-- android:drawableLeft="@drawable/selector_eye_clicked" -->

        <TextView
            android:id="@+id/show_green_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/align_left_text"
            android:layout_below="@+id/show_red_colony"
            android:drawableLeft="@drawable/selector_eye04_click"
            android:text="120個"
            android:textColor="@color/eye_green"
            android:padding="1dp" />

        <TextView
            android:id="@+id/show_purple_colony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/align_left_text"
            android:layout_below="@+id/show_green_colony"
            android:drawableLeft="@drawable/selector_eye05_click"
            android:text="0個"
            android:textColor="@color/eye_blue"
            android:padding="1dp" />
    </RelativeLayout>
</RelativeLayout>